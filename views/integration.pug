extends structure.pug

block backImg

    div.divTitleOnBlock
        h3.titleOnBack کسب‌و‌کار‌ غیر نوپا

    //div(style="background: url('/assets/img/cover.jpg'); background-size: cover; right: 0; position: absolute; width: 100%; height: 200px; opacity: 0.9")

    img(src = "/assets/img/cover.jpg", style = "width: 100%; opacity: 0.9")

block content
    div.overBackMainDiv
        div.navBarOnOverBackMainDiv
            ul
                img.homeIcon(src="/assets/img/home.png")
                li.homeBtn خانه /
                li حمایت ها /
                li کسب‌و‌کار‌ غیر نوپا


        div.imgOnOverBackMainDiv

                div.boxOnOverBackMain.col-xs-6
                    center
                        b(style= "font-size: 20px; color: white") تسهیلات مناسب:

                div.boxesDivOnImgOnOverBackMainDiv.boxesDivOnImgOnOverBackMainDivResponsive
                    div.boxOnImgOnOverBackMainDiv.boxOnImgOnOverBackMainDivIntegration.filter(data-filter="7")
                        img(src="/assets/img/accelerator.png")
                        p من شتاب دهنده هستم
                    div.boxOnImgOnOverBackMainDiv.boxOnImgOnOverBackMainDivIntegration.filter(data-filter="8")
                        img(src="/assets/img/vc.png")
                        p من سرمایه گذار هستم
                    div.boxOnImgOnOverBackMainDiv.boxOnImgOnOverBackMainDivIntegration.filter(data-filter="5")
                        img(src="/assets/img/factory.png")
                        p من از اعضای صنف هستم


        div.col-xs-12.chooseCalc
            center
                //div.calcBox.calcBox2ndPage.shadow.calcBoxUnSelected#ceil(onclick="changeCompareCeil('ceil')")
                //    h3 محاسبه سقف تسهیلات
                div.calcBox.calcBox2ndPage.shadow.calcBoxSelected#compare(onclick="changeCompareCeil('compare')")
                    h3 مقایسه تسهیلات

        include layouts/calcDiv

        div.col-xs-12.compareDiv
            div.col-xs-7
                button.btn(onclick="myScrollLeft()", style="float: left; margin-top: 20px; background-color: #1f647d;")
                    span(style="width: 20px; height: 20px; background: url('/assets/img/arrowup.png'); display: inline-block; background-size: contain; background-repeat: no-repeat; transform: rotate(-90deg)")

                button.btn(onclick="scrollRight()", style="float: left; margin-top: 20px; margin-left: 5px; background-color: #1f647d;")
                    span(style="width: 20px; height: 20px; background: url('/assets/img/arrowup.png'); display: inline-block; background-size: contain; background-repeat: no-repeat; transform: rotate(90deg)")

            div.col-xs-5

            div.col-xs-12#myTableParent(style="max-width: 100%; overflow: auto !important")
                table#table.calcTable


        div.hidden#selectedMode(data-val=transferedMode)
        script(src="/assets/js/secondPage.js")
