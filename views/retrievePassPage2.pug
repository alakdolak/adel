    div.mainBgColorOfLogin#pass3.hidden(style="background-color: #1f647d; padding: 10px;")

        center
            div.retrievePassMainBox
                div.stepTitles(style="float:right; font-size: 20px")
                    b(style="float:right") رمز عبور خود را بازیابی کنید

                div.retrievePassBoxes

                    div.rpBoxTitle
                        b(style="float:right") کلمه عبور جدید خود را وارد کنید

                    div.retrievePass2ndDiv#retrievePass2ndDiv3rdPage

                        div.retrievePassInputsLabel
                            span(style="display: inline-block; padding-top: 3px; font-size: 15px; float: right") کلمه عبور جدید
                            input#suPass.rpInput.form-control(type='password', placeholder='کلمه عبور' name='newPass', style="width: 70%")

                        div.retrievePassInputsLabel
                            span(style="display: inline-block; padding-top: 3px; font-size: 15px; float: right") تکرار کلمه عبور
                            input#conf.rpInput.form-control(type='password', placeholder='کلمه عبور' name='reNewPass', style="width: 70%")

                        div(style="display:inline-block; width: 450px; padding: 0px 30px;")

                            p#incorrectPass.formErr.hidden.passHelpText.errors(style="margin: 0px 22px") تکرار کلمه عبور مطابقت ندارد
                            p#invalidPass.formErr.hidden.passHelpText.errors(style="margin: 0px 22px; width: 250px") کلمه عبور شما شرایط کلکه عبور ایمن را ندارد. به نکات زیر توجه کنید.

                        div.retrievePassInputsLabel

                            button.rpContinuesBtn#changePassBtn(style="float: left")

                                b(style="float: right; color: #ffffff; font-size: 15px") تأیید

                                img(src = "/assets/img/arrowup.png", style = "float:left; transform: rotate(-90deg); padding-top: 10px")
                            div(style="display:inline-block; float: right;  padding: 15px 0; text-align: right")
                                a(href="/login", style="display:inline-block; font-size: 12px; color: #1f647d") بازگشت به صفحه ورود

                div.rpPassDescriptionDiv(style="display: inline-block; width: 50%")

                    fieldset.rpPassDescription

                        legend(style="width: 100px; margin: 0px 10px; border: none;") توجه کنید

                        div.rpPassDescriptionText
                            p.rpPassDescText رمز شما باید حداقل 8 کاراکتر را شامل شود
                        div.rpPassDescriptionText
                            p.rpPassDescText رمز شما باید حتماً دارای حروف بزرگ و کوچک باشد
                        div.rpPassDescriptionText
                            p.rpPassDescText رمز شما حتماً باید دارای عدد باشد


    script(src="/assets/js/timer.js")