extends structure.pug

block content

    div.mainBgColorOfLogin#pass2(style="background-color: #1f647d; padding: 10px;")

        center

            div.hidden#userId(data-val=user_id)
            div.hidden#reminder(data-val=reminder)

            div.retrievePassMainBox

                div.stepTitles(style="float:right; font-size: 20px")

                    b(style="float:right") رمز عبور خود را بازیابی کنید

                div.retrievePassBoxes#retrievePassBoxes2ndPage

